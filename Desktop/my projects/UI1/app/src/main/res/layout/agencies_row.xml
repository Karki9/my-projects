<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:elevation="90dp"
    >

    <LinearLayout
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6.8"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/coverImageView"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

        </LinearLayout>//image
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:text="Agency Name"
                android:id="@+id/agency_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size"
                android:textColor="#1a1919"
                android:textStyle="bold"/>

        </LinearLayout>//Agency Name
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="vertical">

            <TextView
                android:text="Contact Number"
                android:id="@+id/agency_Contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size"
                android:textColor="#1a1919"
                android:textStyle="bold" />



        </LinearLayout>//contactNumber
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="vertical">

            <TextView
                android:text="Address"
                android:id="@+id/agency_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size"
                android:textColor="#0e0e0e"
                android:textStyle="bold" />

        </LinearLayout>Address
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="vertical">

            <TextView
                android:text="Email"
                android:id="@+id/agency_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="@dimen/text_size"
                android:textColor="#1a1919"
                android:textStyle="bold" />

        </LinearLayout>//email
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2.4"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeImageView"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_like" />


        </LinearLayout>//like and share

    </LinearLayout>



</android.support.v7.widget.CardView>