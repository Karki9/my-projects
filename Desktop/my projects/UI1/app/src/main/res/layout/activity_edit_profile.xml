<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.khadka.ui1.Pages.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/changeImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the image above to upload new image"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp" />
           
            <EditText
                android:background="@drawable/rounded_edittextplain"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="User Name"
                android:id="@+id/usernameChange"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/rounded_edittextplain"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:hint="Contact Number"
                android:id="@+id/numberChange"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:background="@drawable/rounded_edittextplain"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:hint="Address"
                android:id="@+id/Address_change"
                android:textColor="#000"
                android:textSize="15sp" />


            <EditText
                android:background="@drawable/rounded_edittextplain"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:hint="About Yourself"
                android:id="@+id/messageChange"
                android:textColor="#000"
                android:textSize="15sp" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="44dp"
            android:layout_toStartOf="@+id/buttonSave"
            android:background="@drawable/buttonstylepink"
            android:text="BACK"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonBack"
            android:layout_alignBottom="@+id/buttonBack"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="43dp"
            android:background="@drawable/buttonstylepink"
            android:text="SAVE"
            android:textColor="#fff" />





    </RelativeLayout>




</LinearLayout>
